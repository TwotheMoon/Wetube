extends base.pug

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(name="name", type="text", required, placeholder="Name")
        input(name="email", type="email", required, placeholder="Email")
        input(name="username", type="text", required, placeholder="User Name")
        input(name="password", type="password", required, placeholder="Password")
        input(name="password2", type="password", required, placeholder="Confrim Password")
        input(name="loaction", type="text", required, placeholder="Loaction")
        input(type="submit", value="Join")
    hr
    div 
        span Already have an account? 
        a(href="/login") Log in now &rarr;